{
	"bsonType": "object",
	"required": ["name", "unit"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"is_delete": {
			"bsonType": "bool",
			"label": "是否删除",
			"defaultValue": false
		},
		"create_uid": {
			"bsonType": "string",
			"description": "创建人用户的唯一id",
			"label": "创建人用户id",
			"forceDefaultValue": {
				"$env": "uid"
			},
			"foreignKey": "uni-id-users._id"
		},
		"create_time": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"title": "创建时间",
			"defaultValue": {
				"$env": "now"
			}
		},
		"update_time": {
			"bsonType": "timestamp",
			"description": "更新时间",
			"title": "更新时间"
		},
		"name": {
			"bsonType": "string",
			"description": "请填写套餐名称",
			"label": "套餐名称",
			"maxLength": 10,
			"trim": "both"
		},
		"unit": {
			"bsonType": "string",
			"description": "请填写产品单位",
			"label": "产品单位",
			"componentForEdit": {
				"name": "uni-data-select",
				"props": {
					"placeholder": "请选择产品单位"
				}
			}
		},
		"image": {
			"bsonType": "file",
			"fileMediaType": "image",
			"fileExtName": "jpg,png,webp",
			"description": "请选择套餐主图",
			"label": "套餐主图"
		},
		"image_content": {
			"bsonType": "array",
			"arrayType": "file",
			"fileMediaType": "image",
			"fileExtName": "jpg,png,webp",
			"description": "请选择展示图片",
			"label": "展示图片"
		},
		"sku": {
			"bsonType": "array",
			"arrayType": "object",
			"description": "套餐规格",
			"label": "套餐规格",
			"properties": {
				"product_id": {
					"bsonType": "string",
					"description": "产品id",
					"label": "产品id"
				},
				"product_name": {
					"bsonType": "string",
					"description": "请选择产品名称",
					"label": "产品名称"
				},
				"qty": {
					"bsonType": "int",
					"description": "数量",
					"title": "数量",
					"defaultValue": 0
				},
				"unit": {
					"bsonType": "string",
					"description": "请选择计量单位",
					"label": "计量单位",
					"componentForEdit": {
						"name": "uni-data-select",
						"props": {
							"placeholder": "请选择计量单位"
						}
					}
				},
				"market_price": {
					"bsonType": "double",
					"description": "请填写营销价格",
					"label": "营销价格",
					"minimum": 0,
					"maximum": 10000,
					"errorMessage": "{label}在{minimum}与{maximum}之间"
				}
			}
		},
		"sell_price": {
			"bsonType": "double",
			"description": "请填写售价",
			"label": "售价",
			"minimum": 0,
			"maximum": 1000000,
			"errorMessage": "{label}应该大于 {minimum} ，小于 {maximum} "
		},
		"delivery_ratio": {
			"bsonType": "string",
			"description": "配送频率",
			"label": "配送频率",
			"componentForEdit": {
				"name": "uni-data-select",
				"props": {
					"placeholder": "请选择配送频率"
				}
			}
		},
		"delivery_timer": {
			"bsonType": "number",
			"description": "配送次数",
			"label": "配送次数"
		},
		"reserve_begin": {
			"bsonType": "timestamp",
			"description": "预订开始时间",
			"label": "预订开始时间"
		},
		"reserve_end": {
			"bsonType": "timestamp",
			"description": "预订结束时间",
			"label": "预订结束时间"
		},
		"description": {
			"bsonType": "string",
			"description": "请填写产品描述",
			"label": "产品描述",
			"maxLength": 200,
			"trim": "both"
		}
	}
}