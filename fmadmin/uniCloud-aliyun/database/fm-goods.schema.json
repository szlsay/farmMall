// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": false,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"image": {
			"bsonType": "file",
			"fileMediaType": "image",
			"fileExtName": "jpg,png,webp",
			"description": "请选择商品主图",
			"label": "商品主图"
		},
		"name": {
			"bsonType": "string",
			"description": "请填写商品名称",
			"label": "商品名称",
			"maxLength": 10,
			"trim": "both"
		},
		"province_code": {
			"bsonType": "string",
			"description": "省级编码",
			"label": "省"
		},
		"city_code": {
			"bsonType": "string",
			"description": "地级编码",
			"label": "市"
		},
		"area_code": {
			"bsonType": "string",
			"description": "区级编码",
			"label": "省市区",
			"foreignKey": "opendb-city-china.code",
			"enumType": "tree",
			"enum": {
				"collection": "opendb-city-china",
				"orderby": "value asc",
				"field": "code as value, name as text, eq(type, 2) as isleaf"
			}
		},
		"province_name": {
			"bsonType": "string",
			"description": "省级名称",
			"label": "省"
		},
		"city_name": {
			"bsonType": "string",
			"description": "地级名称",
			"label": "市"
		},
		"area_name": {
			"bsonType": "string",
			"description": "区级名称",
			"label": "区"
		},
		"producer": {
			"bsonType": "string",
			"description": "请填写商品产地",
			"label": "商品产地",
			"maxLength": 50,
			"trim": "both"
		},
		"unit": {
			"bsonType": "int",
			"description": "请填写计量单位",
			"label": "计量单位",
			"defaultValue": 0,
			"enum": [{
					"text": "斤",
					"value": 0
				},
				{
					"text": "吨",
					"value": 1
				},
				{
					"text": "只",
					"value": 2
				},
				{
					"text": "袋",
					"value": 3
				},
				{
					"text": "箱",
					"value": 4
				}
			],
			"componentForEdit": {
				"name": "uni-data-select",
				"props": {
					"placeholder": "请选择计量单位"
				}
			}
		},
		"price_cost": {
			"bsonType": "double",
			"description": "请填写成本价",
			"label": "成本价",
			"minimum": 0,
			"maximum": 1000000,
			"errorMessage": "{label}应该大于 {minimum} ，小于 {maximum} "
		},
		"price_original": {
			"bsonType": "double",
			"description": "请填写原价",
			"label": "原价",
			"minimum": 0,
			"maximum": 1000000,
			"errorMessage": "{label}应该大于 {minimum} ，小于 {maximum} "
		},
		"price_sell": {
			"bsonType": "double",
			"description": "请填写售价",
			"label": "售价",
			"minimum": 0,
			"maximum": 1000000,
			"errorMessage": "{label}应该大于 {minimum} ，小于 {maximum} "
		},
		"source_type": {
			"bsonType": "int",
			"label": "商品来源",
			"defaultValue": 0,
			"enum": [{
					"text": "库存现货",
					"value": 0
				},
				{
					"text": "预售采购",
					"value": 1
				}
			]
		},
		"stock": {
			"bsonType": "int",
			"description": "请填写库存",
			"label": "库存",
			"minimum": 0,
			"maximum": 1000000,
			"errorMessage": "{label}应该大于 {minimum} ，小于 {maximum} "
		},
		"storage": {
			"bsonType": "string",
			"description": "请填写存储条件",
			"label": "存储条件",
			"maxLength": 200,
			"trim": "both"
		},
		"expiry": {
			"bsonType": "int",
			"description": "请填写保质期",
			"label": "保质期",
			"minimum": 0,
			"maximum": 1000000,
			"errorMessage": "{label}应该大于 {minimum} ，小于 {maximum} "
		},
		"buy_min": {
			"bsonType": "int",
			"description": "请填写最小起购",
			"label": "最小起购",
			"minimum": 0,
			"maximum": 1000000,
			"errorMessage": "{label}应该大于 {minimum} ，小于 {maximum} "
		},
		"buy_max": {
			"bsonType": "int",
			"description": "请填写最大起购",
			"label": "最大起购",
			"minimum": 0,
			"maximum": 1000000,
			"errorMessage": "{label}应该大于 {minimum} ，小于 {maximum} "
		},
		"description": {
			"bsonType": "string",
			"description": "请填写商品描述",
			"label": "商品描述",
			"maxLength": 200,
			"trim": "both"
		},
		"image_content": {
			"bsonType": "array",
			"arrayType": "file",
			"fileMediaType": "image",
			"fileExtName": "jpg,png,webp",
			"description": "请选择展示图片",
			"label": "展示图片"
		}
	}
}